<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nutrimenez</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="~/https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/assets/vendor/line-awesome/css/line-awesome.min.css" rel="stylesheet">
    <link href="~/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">



</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand font-main-green" asp-area="" asp-controller="Home" asp-action="Index"><strong>Nutrimenez</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><span class="hover-link">Inicio</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Services"><span class="hover-link">Servicios</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About"><span class="hover-link">Sobre Mí</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact"><span class="hover-link">Contacto</span></a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Usuario"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Configuración</a>

                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="" asp-controller="MisDatos" asp-action="Edit">Mis Datos</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="MisConsultas" asp-action="Index">Mis Consultas</a>
                                    </div>

                                </li>

                            }
                            if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Configuración</a>

                                    <div class="dropdown-menu">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="RolesUsuario" asp-action="Index">Roles</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Consultas" asp-action="Index">Consultas</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="TipoConsultas" asp-action="Index">Tipos de Consulta</a>
                                    </div>

                                </li>
                            }

                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    



    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-4 col-md-6 footer-info">
                        <h3>Nutrimenez</h3>
                        <p>Expertos en Nutrición deportiva.</p>
                    </div>

                    <div class="col-lg-4 col-md-6 footer-links">
                        <h4>Enlaces de Interés</h4>
                        <ul>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Services">Servicios</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="About">Sobre Mí</a>
                            </li>
                            

                            <li><a href="#">Términos de Servicio</a></li>

                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-6 footer-contact">
                        <a asp-area="" asp-controller="Home" asp-action="Contact"><h4 class="hover-link">Contacto</h4></a>
                        <p>
                            Alicante (Alicante) <br>
                            03007<br>
                            <strong>Email:</strong> info@nutrimenez.es<br>
                        </p>

                        <div class="social-links">
                            <a href="#" class="instagram"><i class="icofont-instagram"></i></a>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>Nutrimenez</span></strong>. Todos los derechos Reservados
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/serenity-bootstrap-corporate-template/ -->
                Diseñado por <a href="https://bootstrapmade.com/">Carlos González Mújica</a>
            </div>
        </div>
    </footer><!-- End Footer -->
